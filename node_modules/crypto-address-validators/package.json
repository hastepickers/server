{
  "name": "crypto-address-validators",
  "description": "Wallet address validator for BTC, TRX, ETH, USDT (ERC20, TRC20), HOGE, SFM, SMARS",
  "keywords": [
    "btc",
    "bitcoin",
    "ethereum",
    "trx",
    "usdt",
    "erc20",
    "trc20",
    "HOGE",
    "SFM",
    "SMARS"
  ],
  "version": "1.0.3",
  "main": "src/crypto_address_validators",
  "engines": {
    "node": "*"
  },
  "types": "src/index.d.ts",
  "scripts": {
    "bundle": "browserify src/crypto_address_validators.js --standalone WAValidator --outfile dist/crypto_address_validators.js",
    "minify": "uglifyjs -c -m -o dist/crypto_address_validators.min.js -- dist/crypto_address_validators.js",
    "test:node": "mocha test",
    "test:browser": "karma start",
    "test": "npm run test:node && npm run test:browser",
    "start": "npm run bundle && npm run minify && npm test"
  },
  "dependencies": {
    "base-x": "^3.0.4",
    "buffer": "^6.0.3",
    "jssha": "2.3.1"
  },
  "devDependencies": {
    "browserify": "^15.1.0",
    "chai": "^4.1.2",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^5.0.2",
    "uglify-js": "^3.3.13"
  }
}
